    <sentence id="DDI-MedLine.d103.s4" text="Physiological oral magnesium load constitutes the best tool for diagnosis of magnesium deficiency and the first step of its treatment. ">
        <entity id="DDI-MedLine.d103.s4.e0" charOffset="19-27"
            type="drug" text="magnesium"/>
